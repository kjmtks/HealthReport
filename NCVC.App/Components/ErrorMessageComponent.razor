@if (!string.IsNullOrWhiteSpace(ErrorMessage))
{
    <div class="ui negative message">
        <div class="ui header">@Subject</div>
        <p>@ErrorMessage</p>
    </div>
}

@code
{
    [Parameter]
    public string Subject { get; set; }
    [Parameter]
    public string ErrorMessage { get; set; }

}